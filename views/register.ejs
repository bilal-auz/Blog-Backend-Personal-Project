<%- include('./include/header.ejs') %>
<%- include('./include/navHeader.ejs')%>
<div class="section-landing--form">
    <div class="container-login">
        <div class="wrapper-login">
            <div class="form__header">
                <p id="form__header--welcome">Weclome</p>
                <p id="form__header--title">Register To BLOG</p>
                <a href="/login">
                    <p id="login-resgisterNow">
                        OR <span>LOGIN&nbsp;Now!</span>
                    </p>
                </a>
            </div>
            <form class="login-register--form" id="register-form" action="" method="POST">
                <div class="login-form__divs">
                    <label>Username <span class="feedBack"><%= errors.userName %></span></label>
                    <input type="text" name="userName" placeholder="USER NAME" >
                </div>
                <div class="login-form__divs">
                    <label>E-mail <span class="feedBack"><%= errors.email %></span></label>
                    <input type="text" placeholder="Email" name="email" >
                </div>
                <div class="login-form__divs">
                    <label>Password <span class="feedBack"><%= errors.password %></span></label>
                    <input id="Pass" type="password" name="password" placeholder="Password"  >
                </div>
                <div class="login-form__divs confPassDiv">
                    <label>Confirm Password <span class="feedBack"><%= errors.confPassword %></label>
                    <input id="confPass" type="password" name="confPassword" placeholder="Confirm Password" >
                </div>
                <div class="login-form__passwordOpr">
                    <div>
                        <input type="checkbox" id="showPass" onclick="showHidePass()">
                        <label for="showPass">Show&nbsp;Password</label>
                    </div>
                    <button id="submit" type="submit" value="submit">Register</button>
                </div>
            </form>
        </div> 
    </div>
</div>
<%-  include('./include/footer.ejs')%>